name: Build and Push V2Ray Trojan-WS to Docker Hub

on:
  push:
    branches: [ trojan-ws ]
    paths:
      - 'Dockerfile'
      - 'config.json'
  workflow_dispatch:

jobs:
  build-and-push:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Create V2Ray configuration file
        run: |
          cat > config.json << EOF
          {
            "inbounds": [
              {
                "port": 8080,
                "protocol": "trojan",
                "settings": {
                  "clients": [
                    {
                      "password": "GCP-OOREDOO-DZ-ZORO",
                      "level": 0
                    }
                  ],
                  "fallbacks": []
                },
                "streamSettings": {
                  "network": "ws",
                  "security": "none",
                  "wsSettings": {
                    "path": "/tg-@ZORO40_DZ"
                  }
                },
                "sniffing": {
                  "enabled": true,
                  "destOverride": ["http", "tls"]
                }
              }
            ],
            "outbounds": [
              {
                "protocol": "freedom",
                "settings": {}
              }
            ]
          }
          EOF

      - name: Create Dockerfile
        run: |
          cat > Dockerfile << EOF
          FROM v2fly/v2fly-core:latest

          COPY config.json /etc/v2ray/config.json

          EXPOSE 8080

          CMD ["v2ray", "run", "-config", "/etc/v2ray/config.json"]
          EOF

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          tags: |
            ${{ secrets.DOCKERHUB_USERNAME }}/trojan-ws:latest
            ${{ secrets.DOCKERHUB_USERNAME }}/trojan-ws:${{ github.sha }}
          labels: |
            org.opencontainers.image.source=https://github.com/${{ github.repository }}
            org.opencontainers.image.description=V2Ray Trojan WebSocket Proxy Server
            org.opencontainers.image.licenses=MIT
            telegram.channel=https://t.me/premium_channel_404
            maintainer=@ZORO40_DZ
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Verify Docker image
        run: |
          echo "Image successfully built and pushed to Docker Hub"
          echo "Available as: ${{ secrets.DOCKERHUB_USERNAME }}/trojan-ws:latest"
